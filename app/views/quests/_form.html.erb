<div class="relative">
  <div class="absolute top-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent"></div>
  
  <div class="bg-white border-l-2 border-r-2 border-gray-200 px-8 py-8">
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-8">
        <div class="inline-flex items-center space-x-2 mb-3">
          <div class="w-8 h-px bg-amber-400"></div>
          <span class="text-sm font-medium text-gray-600 uppercase tracking-wider">New Quest</span>
          <div class="w-8 h-px bg-amber-400"></div>
        </div>
        <h2 class="text-lg font-light text-gray-800">What would you like to accomplish today?</h2>
      </div>
      
      <%= form_with(model: quest, local: false,
        class: "space-y-6 sm:flex sm:gap-4",
        data: { controller: "quest-form", quest_form_target: "form", testid: "quest-form" }) do |form| %>
        <div class="relative group flex-1">
          <div class="absolute inset-0 border border-gray-200 group-hover:border-gray-300 transition-colors"></div>
          <div class="relative bg-white">
              <%= form.text_field :name,
                  placeholder: "Enter your quest...",
                  class: "w-full px-6 py-4 border-0 text-gray-700 placeholder-gray-400 bg-transparent focus:outline-amber-300 focus:ring-0 text-lg",
                  data: {
                    testid: "quest-input",
                    quest_form_target: "input",
                  } %>
            </div>
        </div>
        <div class="flex justify-center">
          <div class="w-24 h-px sm:w-px sm:h-15 bg-gradient-to-r sm:bg-gradient-to-t from-transparent via-gray-300 to-transparent"></div>
        </div>

        <div class="text-center sm:h-[44px] sm:mt-2.25">
          <%= form.submit "Add Quest",
              class: "inline-flex items-center px-8 py-3 bg-gray-900 text-white text-sm font-medium uppercase tracking-wider hover:bg-amber-500 transition-colors duration-200 border-0",
              data: { testid: "quest-button" } %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="absolute bottom-0 left-0 right-0 h-px bg-gradient-to-r from-transparent via-gray-300 to-transparent"></div>
</div>